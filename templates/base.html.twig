<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('css/app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('js/app') }}
        {% endblock %}
        
        <meta name="csrf-token" content="{{ csrf_token('mon-token') }}">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link {% if app.request.get('_route') == 'books' %}active{% endif %}" aria-current="page" href="/books">Books</a></li>
                <li class="nav-item"><a class="nav-link {% if app.request.get('_route') == 'authors' %}active{% endif %}" aria-current="page" href="/authors">Authors</a></li>
                
              </ul>
            </div>
          </div>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
